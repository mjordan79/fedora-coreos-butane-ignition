storage:
#  disks:
#    - device: /dev/sda
#      wipe_table: true
#      partitions:
#        - label: ROOT
#  filesystems:
#    - path: /
#      device: /dev/disk/by-partlabel/ROOT
#      format: ext4
#      wipe_filesystem: true
#      label: ROOT
  files:
    - path: /opt/ignition.json
      mode: 0644
      contents:
        source: http://192.169.0.10/ignition/ignition_flatcar.ign
    - path: /etc/vconsole.conf
      mode: 0644
      contents:
        inline: KEYMAP=it
    - path: /etc/ssh/sshd_config.d/10-custom.conf
      contents:
        inline: |
          X11Forwarding no
          GSSAPIAuthentication no
    - path: /etc/systemd/network/00-eth0.network
      contents:
        inline: |
          [Match]
          Name=eth0

          [Network]
          DNS=8.8.8.8
          Address=192.169.0.20/24
          Gateway=192.169.0.1
    - path: /etc/hosts
      overwrite: false
      append:
        - inline: |
            192.169.0.15 master1.digitalnucleus.it
            192.169.0.16 master2.digitalnucleus.it
            192.169.0.17 master3.digitalnucleus.it
            192.169.0.18 worker1.digitalnucleus.it
            192.169.0.19 worker2.digitalnucleus.it
    - path: /etc/hostname
      mode: 0644
      contents:
        inline: master1.digitalnucleus.it

  links:
    - path: /etc/localtime
      target: ../usr/share/zoneinfo/Europe/Rome

    
